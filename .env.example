# Public-facing host for Phoenix (use your domain in cloud)
PHX_HOST=example.com
PORT=8080

# Secrets (set strong values before deploy)
SECRET_KEY_BASE=change_me_to_a_secret_generated_by_mix_phx_gen_secret
POSTGRES_PASSWORD=choose_a_strong_db_password
COUCHDB_USERNAME=admin
COUCHDB_PASSWORD=choose_a_strong_couchdb_password
COUCHDB1_PASSWORD=choose_a_strong_couchdb1_password
COUCHDB2_PASSWORD=choose_a_strong_couchdb2_password
COUCHDB_SECONDARY_URL=http://couchdb2:5984
COUCHDB_SECONDARY_USERNAME=admin
COUCHDB_SECONDARY_PASSWORD=${COUCHDB2_PASSWORD}

# Internal service URLs (containers talk on the bridge network)
DATABASE_URL=ecto://reg_user:${POSTGRES_PASSWORD}@postgres:5432/registratie
COUCHDB_URL=http://couchdb1:5984

# Optional overrides
POSTGRES_DB=registratie
POSTGRES_USER=reg_user
